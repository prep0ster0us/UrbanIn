<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="24dp"
    app:cardBackgroundColor="#013241"
    android:elevation="0dp"
    app:cardCornerRadius="24dp" >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/transparent">

        <ImageView
            android:id="@+id/successIcon"
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:contentDescription="success dialog logo"
            android:scaleType="centerCrop"
            android:src="@drawable/success_dialog_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/successTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gotham_regular"
            android:paddingTop="4dp"
            android:paddingBottom="12dp"
            android:text="Success!"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="36sp"
            android:elevation="4dp"
            app:layout_constraintStart_toStartOf="@id/successIcon"
            app:layout_constraintEnd_toEndOf="@id/successIcon"
            app:layout_constraintTop_toBottomOf="@id/successIcon" />

        <TextView
            android:id="@+id/successMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="36dp"
            android:fontFamily="@font/gotham_medium"
            android:paddingHorizontal="24dp"
            android:paddingVertical="8dp"
            android:layout_marginHorizontal="48dp"
            android:text="Message goes here"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/successTitle"
            app:layout_constraintStart_toStartOf="@id/successTitle"
            app:layout_constraintTop_toBottomOf="@id/successTitle" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>