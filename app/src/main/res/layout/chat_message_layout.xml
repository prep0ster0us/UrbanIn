<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <RelativeLayout
        android:id="@+id/receiver_msg_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/receiverMsgText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chat_receiver_msg_bg"
            android:fontFamily="@font/gotham_book"
            android:lineSpacingExtra="2dp"
            android:maxWidth="225dp"
            android:paddingVertical="8dp"
            android:paddingStart="12dp"
            android:paddingEnd="18dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/receiverMsgTimestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/receiverMsgText"
            android:layout_alignStart="@id/receiverMsgText"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/gotham_thin"
            android:hint="12:00"
            android:textColor="@color/default_text"
            android:textSize="10sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sender_msg_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/senderMsgText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chat_sender_msg_bg"
            android:fontFamily="@font/gotham_book"
            android:lineSpacingExtra="2dp"
            android:maxWidth="225dp"
            android:paddingVertical="8dp"
            android:paddingStart="12dp"
            android:paddingEnd="18dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/senderMsgTimestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/senderMsgText"
            android:layout_alignEnd="@id/senderMsgText"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/gotham_thin"
            android:hint="12:00"
            android:textColor="@color/default_text"
            android:textSize="10sp"
            android:textStyle="bold" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>