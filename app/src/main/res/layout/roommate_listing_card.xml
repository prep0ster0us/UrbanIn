<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    android:layout_marginBottom="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <ImageView
            android:id="@+id/rmImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:contentDescription="roommate listing image"
            android:src="@drawable/baseline_account_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/rmHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gotham_regular"
            android:hint="Looking for a room"
            android:padding="8dp"
            android:textColor="@color/default_text"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rmImage" />

        <TextView
            android:id="@+id/rmSubHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gotham_medium"
            android:hint="Professional, Male\nLarge room"
            android:paddingStart="12dp"
            android:paddingTop="4dp"
            android:lineSpacingExtra="4dp"
            android:textColor="@color/default_text"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rmHeader" />

        <TextView
            android:id="@+id/rmBudgetHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gotham_medium"
            android:paddingStart="12dp"
            android:paddingTop="12dp"
            android:text="Budget: "
            android:textColor="@color/default_text"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rmSubHeader" />

        <TextView
            android:id="@+id/rmBudget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gotham_medium"
            android:hint="$ XXX / month"
            android:paddingTop="12dp"
            android:paddingStart="4dp"
            android:textColor="@color/default_text"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/rmBudgetHeader"
            app:layout_constraintTop_toTopOf="@id/rmBudgetHeader" />

        <TextView
            android:id="@+id/rmMoveIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gotham_regular"
            android:hint="Move-In"
            android:padding="8dp"
            android:textColor="@color/default_text"
            android:textSize="16dp"
            app:layout_constraintBottom_toTopOf="@id/rmDate"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/rmDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gotham_medium"
            android:hint="Dec XX"
            android:paddingHorizontal="8dp"
            android:textColor="@color/default_text"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/rmMoveIn" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>