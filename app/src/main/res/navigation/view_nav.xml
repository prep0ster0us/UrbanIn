<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_nav"
    app:startDestination="@id/searchFragment">

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.urbanin.tenant.search.SearchFragment"
        android:label="fragment_tenant_search"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_searchFragment_to_searchFilterFragment"
            app:destination="@id/searchFilterFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFilterFragment"
        android:name="com.example.urbanin.tenant.search.SearchFilterFragment"
        android:label="SearchFilterFragment">
        <action
            android:id="@+id/action_searchFilterFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>

</navigation>