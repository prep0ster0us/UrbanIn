<resources>

    <style name="Widget.Theme.UrbanIn.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>
    <!-- For rounded profile image - Account view -->
    <style name="roundedImageViewRounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <!-- For rounded profile image - Account view -->
    <style name="roundedEdgeMessageCard" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
    </style>
    <!-- For switch buttons -->
    <style name="switchButton" parent="Theme.AppCompat">
        <item name="colorControlActivated">@color/primary_background</item>
    </style>
    <!--  For Material Alert Dialog -->
    <style name="AlertDialogPalette" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorAccent">@color/primary_background</item> <!-- Change to your desired button color -->
        <item name="colorPrimary">@color/primary_background</item> <!-- Change to your desired button color -->
    </style>
    <!--  For Bottom Navigation Views-->
    <style name="BottomNavigation">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="itemBackground">@color/soft_bg</item>
        <item name="itemIconTint">@color/primary_background</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>
</resources>