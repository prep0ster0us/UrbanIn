<resources>

    <style name="Widget.Theme.UrbanIn.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>
    <!-- For rounded profile image - Account view -->
    <style name="roundedImageViewRounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <!-- For rounded profile image - Account view -->
    <style name="roundedEdgeMessageCard" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
    </style>
    <!-- For switch buttons -->
    <style name="switchButton" parent="Theme.AppCompat">
        <item name="colorControlActivated">@color/primary_background</item>
    </style>
    <!--  For Material Alert Dialog -->
<!--    <style name="AlertDialogPalette" parent="Theme.MaterialComponents.Light.Dialog.Alert">-->
<!--        <item name="colorAccent">@color/primary_background</item> &lt;!&ndash; Change to your desired button color &ndash;&gt;-->
<!--        <item name="colorPrimary">@color/primary_background</item> &lt;!&ndash; Change to your desired button color &ndash;&gt;-->
<!--    </style>-->

    <style name="AlertDialogPalette">
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive</item>
        <item name="buttonBarNeutralButtonStyle">@style/Alert.Button.Neutral</item>
        <item name="buttonBarNegativeButtonStyle">@style/Alert.Button.Negative</item>
    </style>

    <style name="Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/default_text</item>
        <item name="rippleColor">@color/soft_bg</item>
    </style>
    <style name="Alert.Button.Neutral" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/default_text</item>
        <item name="rippleColor">@color/soft_bg</item>
    </style>
    <style name="Alert.Button.Negative" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/default_text</item>
        <item name="rippleColor">@color/soft_bg</item>
    </style>
    <!--  For Bottom Navigation Views-->
    <style name="BottomNavigation">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="itemBackground">@color/soft_bg</item>
        <item name="itemIconTint">@color/primary_background</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>
<!--    For checkboxes-->
    <style name="CheckBoxPalette" parent="">
        <item name="buttonTint">@color/primary_background</item>
    </style>
    For RangeSlider
    <style name="RangeSliderPalette" parent="Widget.MaterialComponents.Slider">
        <item name="tickColor">@color/primary_background</item>
        <item name="tickColorActive">@color/soft_bg</item>
        <item name="tickColorInactive">@color/primary_background</item>
        <item name="thumbColor">@color/primary_background</item>
        <item name="trackColorActive">@color/primary_background</item>
        <item name="trackColorInactive">@color/soft_bg</item>
    </style>
</resources>